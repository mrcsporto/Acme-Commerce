<p id="notice"><%= notice %></p>

<div class="nav">
  <h1>Orders </h1>
  <h4><%= link_to 'New Order', new_order_path %></h4>
  <h4><%= link_to 'Best Sellers', bestsellers_path %></h4>
</div>
<hr>
<div class="container">
    <div class="content">
      <h3>Import Orders</h3>
        <%= form_tag import_orders_path, multipart: true do %>
        <%= file_field_tag :file %>
        <%= submit_tag "Import" %>
      <% end %>
    </div>
    <div class="content">
      <h3>Filter</h3>
      <%= form_tag orders_path, multipart: true, :method => 'get' do %>
        <%= select_tag "categoria", options_for_select(@orders.filter_category), {:include_blank => "Select"} %>
        <%= submit_tag "Search", :name => nil %>
      <% end %>
    </div>
  </div>
</div><br><hr><br>

<table>
  <thead>
    <tr>
      <th>Referencia pedido</th>
      <th>Email pedido</th>
      <th>Data pagamento</th>
      <th>Nome cliente</th>
      <th>Estado pedido</th>
      <th>Valor total</th>
      <th>Valor produto</th>
      <th>Imagem produto</th>
      <th>Nome produto</th>
      <th>Categoria</th>
      <th>Valor base</th>
      <th>Cidade</th>
      <th>Estado</th>
      <th>Endereco</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.referencia_pedido %></td>
        <td><%= order.email_pedido %></td>
        <td><%= order.data_pagamento %></td>
        <td><%= order.nome_cliente %></td>
        <td><%= order.estado_pedido %></td>
        <td><%= order.valor_total %></td>
        <td><%= order.valor_produto %></td>
        <td><%= order.imagem_produto %></td>
        <td><%= order.nome_produto %></td>
        <td><%= order.categoria %></td>
        <td><%= order.valor_base %></td>
        <td><%= order.cidade %></td>
        <td><%= order.estado %></td>
        <td><%= order.endereco %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
