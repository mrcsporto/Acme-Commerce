<%- model_class = Order -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:referencia_pedido) %>:</strong></dt>
  <dd><%= @order.referencia_pedido %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email_pedido) %>:</strong></dt>
  <dd><%= @order.email_pedido %></dd>
  <dt><strong><%= model_class.human_attribute_name(:data_pagamento) %>:</strong></dt>
  <dd><%= @order.data_pagamento %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nome_cliente) %>:</strong></dt>
  <dd><%= @order.nome_cliente %></dd>
  <dt><strong><%= model_class.human_attribute_name(:estado_pedido) %>:</strong></dt>
  <dd><%= @order.estado_pedido %></dd>
  <dt><strong><%= model_class.human_attribute_name(:valor_total) %>:</strong></dt>
  <dd><%= @order.valor_total %></dd>
  <dt><strong><%= model_class.human_attribute_name(:valor_produto) %>:</strong></dt>
  <dd><%= @order.valor_produto %></dd>
  <dt><strong><%= model_class.human_attribute_name(:imagem_produto) %>:</strong></dt>
  <dd><%= @order.imagem_produto %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nome_produto) %>:</strong></dt>
  <dd><%= @order.nome_produto %></dd>
  <dt><strong><%= model_class.human_attribute_name(:categoria) %>:</strong></dt>
  <dd><%= @order.categoria %></dd>
  <dt><strong><%= model_class.human_attribute_name(:valor_base) %>:</strong></dt>
  <dd><%= @order.valor_base %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cidade) %>:</strong></dt>
  <dd><%= @order.cidade %></dd>
  <dt><strong><%= model_class.human_attribute_name(:estado) %>:</strong></dt>
  <dd><%= @order.estado %></dd>
  <dt><strong><%= model_class.human_attribute_name(:endereco) %>:</strong></dt>
  <dd><%= @order.endereco %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              orders_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_order_path(@order), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              order_path(@order),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
